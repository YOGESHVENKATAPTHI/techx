{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // ‚Üê crucial!
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"]
    }
  },

  // only these folders need to be compiled
  "include": ["client/src", "vite.config.ts"]
}
